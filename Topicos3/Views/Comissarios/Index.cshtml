@model IEnumerable<Topicos3.Models.Comissario>

@{
    ViewBag.Title = "Lista de Comissários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">Lista de Comissários</h2>

    <p>
        @Html.ActionLink("Criar Novo", "Create", null, new { @class = "btn btn-success mb-3" })
    </p>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Nome</th>
                <th>Data de Nascimento</th>
                <th>CPF</th>
                <th>Anos de Experiência</th>
                <th>Último Treinamento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cpf)</td>
                    <td>@Html.DisplayFor(modelItem => item.AnosExperiencia)</td>
                    <td>@Html.DisplayFor(modelItem => item.UltimoTreinamento)</td>
                    <td>
                        <div class="d-flex gap-2">
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
