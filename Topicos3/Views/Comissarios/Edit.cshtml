@model Topicos3.Models.Comissario

@{
    ViewBag.Title = "Editar Comissário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">Editar Comissário</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 class="font-weight-bold text-muted">Detalhes do Comissário</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            @Html.HiddenFor(model => model.Id)

            <!-- Campo Nome -->
            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Campo Data de Nascimento -->
            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.DataNascimento, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.DataNascimento, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Campo CPF -->
            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.Cpf, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Cpf, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Campo Anos de Experiência -->
            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.AnosExperiencia, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.AnosExperiencia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AnosExperiencia, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Campo Último Treinamento -->
            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.UltimoTreinamento, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.UltimoTreinamento, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UltimoTreinamento, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Botões de Ação -->
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <div class="d-flex gap-3">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                        @Html.ActionLink("Voltar à Lista", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
