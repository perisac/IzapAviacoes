@model Topicos3.Models.Rota

@{
    ViewBag.Title = "Excluir Rota";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-danger mb-4">Excluir Rota</h2>

    <h4 class="text-muted">Tem certeza de que deseja excluir esta rota?</h4>
    <div class="bg-light p-4 rounded shadow-sm">
        <h5 class="font-weight-bold">Detalhes da Rota</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Origem</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Origem)</dd>

            <dt class="col-sm-4">Destino</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Destino)</dd>

            <dt class="col-sm-4">Distância</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Distancia)</dd>

            <dt class="col-sm-4">Tempo Estimado</dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.TempoEstimado)
             </dd>
            <dt class="col-sm-4">Avião</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Aviao.Modelo)</dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="mt-4 d-flex gap-3">
        <input type="submit" value="Excluir" class="btn btn-danger" />
        @Html.ActionLink("Voltar à Lista", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}
</div>
