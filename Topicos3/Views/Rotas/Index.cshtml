@model IEnumerable<Topicos3.Models.Rota>

@{
    ViewBag.Title = "Rotas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">Lista de Rotas</h2>

    <p>
        @Html.ActionLink("Criar Nova Rota", "Create", null, new { @class = "btn btn-success mb-3" })
    </p>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Origem</th>
                <th>Destino</th>
                <th>Distância</th>
                <th>Tempo Estimado (h)</th>
                <th>Avião</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Origem)</td>
                    <td>@Html.DisplayFor(modelItem => item.Destino)</td>
                    <td>@Html.DisplayFor(modelItem => item.Distancia)</td>
                    <td>@Html.DisplayFor(modelItem => item.TempoEstimado)</td>
                    <td>@Html.DisplayFor(modelItem => item.Aviao.Modelo)</td>
                    <td>
                        <div class="d-flex gap-2">
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
