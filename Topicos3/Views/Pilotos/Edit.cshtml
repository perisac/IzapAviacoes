@model Topicos3.Models.Piloto

@{
    ViewBag.Title = "Editar Piloto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">Editar Piloto</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4 class="font-weight-bold text-muted">Detalhes do Piloto</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
    @Html.HiddenFor(model => model.Id)

    <!-- Campo Nome -->
    <div class="form-group row mb-3">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
