@model Topicos3.Models.Piloto

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-danger mb-4">Excluir Piloto</h2>

    <h4 class="text-muted">Tem certeza de que deseja excluir este piloto?</h4>
    <div class="bg-light p-4 rounded shadow-sm">
        <h5 class="font-weight-bold">Detalhes do Piloto</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Nome</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-4">Data de Nascimento</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DataNascimento)</dd>

            <dt class="col-sm-4">CPF</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Cpf)</dd>

            <dt class="col-sm-4">Tipo de Licença</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TipoLicenca)</dd>

            <dt class="col-sm-4">Tempo de Experiência</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TempoExperiencia)</dd>

            <dt class="col-sm-4">Horas de Voo</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.HorasVoo)</dd>

            <dt class="col-sm-4">Última Avaliação Médica</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.UltimaAvaliacaoMedica)</dd>

            <dt class="col-sm-4">Último Treinamento</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.UltimoTreinamento)</dd>
        </dl>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="mt-4">
            <input type="submit" value="Excluir" class="btn btn-danger" /> <!-- Botão vermelho para exclusão -->
            @Html.ActionLink("Voltar à Lista", "Index", null, new { @class = "btn btn-secondary ml-2" }) <!-- Botão cinza para voltar -->
        </div>
    }
</div>
