@using Topicos3.Models
@model LoginViewModel

@{
    ViewBag.Title = "Logon";
}

<main aria-labelledby="title" class="container mt-5">
    <h2 id="title" class="text-primary font-weight-bold mb-4">@ViewBag.Title</h2>
    <div class="row">
        <div class="col-md-6 offset-md-3 bg-light p-4 rounded shadow-sm">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4 class="text-secondary">Use uma conta local para fazer o logon.</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Digite seu e-mail" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Digite sua senha" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group form-check mt-3">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                        @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
                    </div>

                    <div class="form-group mt-4">
                        <input type="submit" value="Logon" class="btn btn-primary w-100" />
                    </div>

                    <div class="mt-3 text-center">
                        <p>
                            @Html.ActionLink("Registre-se como um novo usuário", "Register", null, new { @class = "text-decoration-none" })
                        </p>
                        Habilite quando a confirmação da conta estiver ativada para a funcionalidade de redefinição de senha
                            <p>
                                @Html.ActionLink("Esqueceu sua senha?", "ForgotPassword", null, new { @class = "text-decoration-none" })
                            </p>
                    </div>
                }
            </section>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
