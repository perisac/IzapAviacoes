@model IEnumerable<Topicos3.Models.Aviao>

@{
    ViewBag.Title = "Lista de Aviões";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">Lista de Aviões</h2>

    <p>
        @Html.ActionLink("Criar Novo Avião", "Create", null, new { @class = "btn btn-success mb-3" })
    </p>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Modelo</th>
                <th>Autonomia</th>
                <th>Ano de Fabricação</th>
                <th>Capacidade de Pessoas</th>
                <th>Velo. Média</th>
                <th>Horas de Voo</th>
                <th>Última Manutenção</th>
                <th>Tripulação</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Modelo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Autonomia)</td>
                    <td>@Html.DisplayFor(modelItem => item.AnoFabricacao)</td>
                    <td>@Html.DisplayFor(modelItem => item.Capacidade)</td>
                    <td>@Html.DisplayFor(modelItem => item.VelocidadeMedia)</td>
                    <td>@Html.DisplayFor(modelItem => item.HorasVoo)</td>
                    <td>@Html.DisplayFor(modelItem => item.UltimaManutencao)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tripulacao.NomeTripulacao)</td>
                    <td>
                        <div class="d-flex gap-2">
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
